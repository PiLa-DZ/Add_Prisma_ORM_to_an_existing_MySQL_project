generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model courses {
  id          Int           @id @default(autoincrement())
  title       String        @db.VarChar(100)
  enrollments enrollments[]
}

model enrollments {
  student_id  Int
  course_id   Int
  enrolled_at DateTime? @default(now()) @db.DateTime(0)
  courses     courses   @relation(fields: [course_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "fk_course")
  students    students  @relation(fields: [student_id], references: [id], onDelete: Cascade, onUpdate: Restrict, map: "fk_student")

  @@id([student_id, course_id])
  @@index([course_id], map: "fk_course")
}

model students {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(100)
  enrollments enrollments[]
}


model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String?
  posts Post[]
}
